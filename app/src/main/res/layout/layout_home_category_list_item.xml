<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/home_cateogry_item_padding"
    android:paddingBottom="@dimen/home_cateogry_item_padding">

    <!-- category name -->
    <RelativeLayout
        android:id="@+id/layout_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/bg_but_theme_round">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_cateogry_item_cateogry_padding_vert"
            android:layout_marginBottom="@dimen/home_cateogry_item_cateogry_padding_vert"
            android:layout_marginLeft="@dimen/home_cateogry_item_cateogry_padding_horiz"
            android:layout_marginRight="@dimen/home_cateogry_item_cateogry_padding_horiz"
            android:text="Arts and Crafts"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <!-- items list -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="@dimen/home_item_list_item_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_category_name"
        android:layout_marginTop="@dimen/home_cateogry_item_padding"
        android:paddingLeft="@dimen/home_cateogry_item_padding"
        android:paddingRight="@dimen/home_cateogry_item_padding"
        android:clipToPadding="false"/>

</android.support.constraint.ConstraintLayout>