<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/profile_item_margin_margin"
        android:layout_marginRight="@dimen/profile_item_margin_margin"
        android:layout_marginBottom="@dimen/profile_item_margin_margin"
        android:gravity="center_vertical"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/profile_item_margin_margin">

        <!-- photo -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_item_default"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <!-- name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Richard Rice Cooker and Steamer"
                android:textSize="11sp"
                android:textStyle="bold"/>

            <!-- date-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/21/17"
                android:textSize="11sp"/>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/but_open"
                    android:layout_width="@dimen/profile_item_button_width"
                    android:layout_height="match_parent"
                    android:text="OPEN"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/profile_item_button_font_size"
                    android:background="@drawable/bg_but_gradient"
                    android:foreground="?attr/selectableItemBackground"/>
                <Button
                    android:id="@+id/but_delete"
                    android:layout_width="@dimen/profile_item_button_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:text="DELETE"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/profile_item_button_font_size"
                    android:background="@drawable/bg_but_gradient"
                    android:foreground="?attr/selectableItemBackground"/>
            </LinearLayout>
        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>